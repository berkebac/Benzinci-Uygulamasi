<Page x:Class="WpfApplication1.Pages.PompaKayıtPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PompaKayıtPage">

    <Grid Background="SkyBlue">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="50,39,0,0" TextWrapping="Wrap" Text="Yakıt Türü : " VerticalAlignment="Top"/>
        <TextBox x:Name="tbpompano" HorizontalAlignment="Left" Height="22" Margin="124,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="50,70,0,0" TextWrapping="Wrap" Text="Pompa No :" VerticalAlignment="Top"/>
        <Button x:Name="btnkayıt" Content="Kayıt" HorizontalAlignment="Left" Margin="106,111,0,0" VerticalAlignment="Top" Width="76" Click="btnkayıt_Click"/>
        <ComboBox x:Name="cmbyakittürü" HorizontalAlignment="Left" Margin="124,33,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="YakıtTürüAdı"/>
    </Grid>
</Page>
